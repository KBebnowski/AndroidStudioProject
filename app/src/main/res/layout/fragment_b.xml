<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



  <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#042340"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"

      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
           >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#082C50">

                        <ImageView
                            android:id="@+id/pierwszy"
                            android:layout_marginTop="-110dp"
                            android:layout_marginBottom="-110dp"
                            android:layout_width="250dp"
                            android:layout_height="400dp"
                            app:srcCompat="@drawable/b1"
                            android:onClick="pierwszy"/>

                        <ImageView
                            android:layout_marginTop="-110dp"
                            android:layout_marginBottom="-110dp"
                            android:layout_width="120dp"
                            android:layout_height="400dp"
                            app:srcCompat="@drawable/b2"/>

                    </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      >


                      <ImageView
                          android:id="@+id/imageView2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          app:srcCompat="@drawable/c1"
                          android:layout_marginTop="-30dp"
                          android:layout_marginBottom="-30dp"/>
                  </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/d1"
                        android:layout_marginBottom="-135dp"
                        android:onClick="drugi"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/d2"
                        android:layout_marginBottom="-255dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/d3"
                        android:layout_marginBottom="-50dp"
                        />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontuzjowani"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="20dp"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/imie1"
                  android:layout_width="340dp"
                  android:layout_height="wrap_content"
                  android:text="Philippe Coutinho"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:textColor="#93AAC2"
                  />
              <TextView
                  android:id="@+id/opis1"
                  android:layout_width="340dp"
                  android:layout_height="wrap_content"
                  android:text="Naciągnięcie mięśnia dwugłowego"
                  android:textSize="15sp"
                  android:textStyle="italic"
                  android:textColor="#93AAC2"
                  />
          </LinearLayout>
          <ImageView
              android:id="@+id/img1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@android:drawable/ic_dialog_info"
              android:onClick="informacja"/>
      </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/imie2"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:text="Arthur Melo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#93AAC2"
                        />
                    <TextView
                        android:id="@+id/opis2"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:text="Dolegliwości kości łonowej"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#93AAC2"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_dialog_info"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/imie3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luis Suárez"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#93AAC2"
                        />
                    <TextView
                        android:id="@+id/opis3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kontuzja kolana"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#93AAC2"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_dialog_info"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/imie4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ousmane Dembélé"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#93AAC2"
                        />
                    <TextView
                        android:id="@+id/opis4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kontuzja mięśnia dwugłowego"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#93AAC2"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_dialog_info"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/imie5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rafinha"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#93AAC2"
                        />
                    <TextView
                        android:id="@+id/opis5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zerwanie więzadła krzyżowego"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#93AAC2"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_dialog_info"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cytat tygodnia"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cytat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeśli ktoś przyjeżdża do innego kraju, musi się przystosować do życia w nim, zbliżyć się do ludzi. Najważniejszy jest język. Uczenie się go to najlepsza część, ponieważ to zostaje na całe życie. Dla mnie mówienie w języku kraju, w którym żyję, to oznaka szacunku i wdzięczności"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="#93AAC2"
                    android:textAlignment="gravity"
                    />
                <TextView
                    android:id="@+id/autor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marc-André ter Stegen o swojej adaptacji w Barcelonie"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textAlignment="gravity"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
